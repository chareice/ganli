-content_for :actions_button do
	=link_to "发件箱",{action: :outbox},class: "tiny secondary button"
	=link_to "写私信",{action: :new},class: "tiny secondary button"
%table
	%tr
		%td ID
		%td 发件人
		%td 发送时间
		%td 操作
	-@messages.each do |message|
		%tr
			%td=message.id
			%td=message.sender.name
			%td=message.created_at.localtime.to_s(:db)
			%td=link_to "查看",admin_message_path(message)
=will_paginate @messages