-content_for :actions_button do
	=link_to "新增用户",{action: :new},class: "tiny secondary button"
%table
	%thead
		%tr
			%td
				用户ID
			%td
				姓名
			%td
				登陆账号
			%td
				用户组
			%td
				上次登陆时间
			%td
				操作
	%tbody
		-@users.each do |user|
			%tr
				%td
					=user.id
				%td
					=user.name
				%td
					=user.account
				%td
					=user.group.name
				%td
					-if user.lastlogin
						=user.lastlogin.localtime.to_s(:db)
					-else
						从未登陆
				%td
					=link_to "修改",edit_admin_user_path(user)
=will_paginate @users