=render partial: '/admin/delete_button',locals:{name: "删除该用户",confirm:"确定删除用户#{@user.name}？"}
=form_for [:admin,@user] do |f|
	%p
		=f.label :name
		=f.text_field :name
	%p
		=f.label :account
		=f.text_field :account
	%p
		=f.label :email
		=f.text_field :email
	%p
		=f.label :qq
		=f.text_field :qq
	%p
		=f.label :phone
		=f.text_field :phone
	%p
		=f.label :teacher_position
		=f.text_field :teacher_position
	%p
		=f.label :grade
		=f.text_field :grade
	%p
		=f.label :group
		-if @user.id
			=collection_select :user,:group,Group.all,:id,:name,{selected: @user.group.id}
		-else
			=collection_select :user,:group,Group.all,:id,:name
	%p
		=f.label :password,"重置用户密码(留空则不修改用户密码)"
		=f.password_field :password,{:autocomplete =>"off"}
	%p
		=f.submit disable_with: '提交中...'